# Authentication
JWT_SECRET=your_secure_jwt_secret_min_32_characters
REFRESH_SECRET=your_secure_refresh_secret_min_32_characters

# Encryption
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_64_character_hex_encryption_key

# Environment
NODE_ENV=development

# Database (Optional - for future implementation)
# DATABASE_URL=postgresql://user:password@localhost:5432/lexaxiom

# Email Configuration (Optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_specific_password
# SMTP_FROM=noreply@lexaxiom.com

# Security
# Set to 'true' to enforce HTTPS in production
NEXT_PUBLIC_ENFORCE_HTTPS=false

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000

# Session
SESSION_TIMEOUT=3600000
REFRESH_TOKEN_EXPIRY=604800000
